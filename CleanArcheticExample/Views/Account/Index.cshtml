@model IEnumerable<Domain.IdentityEntities.ApplicationUser>

<div class="container">
    <div>
        <a asp-action="Register" class="btn btn-success">New User</a>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td>@user.Email</td>
                    <td>@user.PhoneNumber</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-primary">Edit</a> |
                        <a asp-action="Details" asp-route-id="@user.Id" class="btn btn-info">Details</a> |
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger">Delete</a>
                    </td>

                </tr>
            }

        </tbody>
    </table>
</div>
