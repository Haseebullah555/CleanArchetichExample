@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CleanArcheticExample</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CleanArcheticExample.styles.css" asp-append-version="true" />
    <link href="~/css/CustomStyleSheet.css" rel="stylesheet" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">CleanArcheticExample</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                    <div class="navbar-nav">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">@localizer["Home"]</a>
                        @if(ViewBag.CurrentUrl == "~/Student/AllStudents")
                        {
                            <a class="nav-link text-dark active-nav" asp-area="" asp-controller="Student" asp-action="AllStudents">@localizer["Students"]</a>
                        }
                        else
                        {
                            <a class="nav-link text-dark" asp-area="" asp-controller="Student" asp-action="AllStudents">@localizer["Students"]</a>
                        }
                        <a class="nav-link text-dark" asp-area="" asp-controller="Subject" asp-action="Index">@localizer["All Subjects"]</a>
                        <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Index">@localizer["All Users"]</a>
                    </div>
                </div>
                <div class="">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="navbar-nav">
                            <i class="fa-solid fa-user"></i>
                            <span class="nav-link text-dark">@User.Identity?.Name</span>
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Logout">Logout</a>
                        </div>
                    }
                    else
                    {
                        <div class="navbar-nav">
                            @if (ViewBag.CurrentUrl == "~/Account/Register")
                            {
                                <a class="nav-link text-dark active-nav" asp-controller="Account" asp-action="Register">Register</a>
                            }
                            else
                            {
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Register</a>
                            }
                            <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Login</a>
                        </div>
                    }
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - CleanArcheticExample - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
