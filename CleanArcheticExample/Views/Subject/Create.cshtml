@model Application.DTOs.Subject.CreateSubjectDto
<div class="Container">
    <form asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="SubjectName" class="control-label">Subject Name</label>
            <input asp-for="SubjectName" class="form-control" required />
            <span asp-validation-for="SubjectName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="TotalMarks" class="control-label">Total Marks</label>
            <input asp-for="TotalMarks" class="form-control" required />
            <span asp-validation-for="TotalMarks" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </form>
</div>