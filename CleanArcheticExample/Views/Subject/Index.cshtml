@model IEnumerable<Application.DTOs.Subject.SubjectDto>
<div class="container">
    <div>
        <a asp-action="Create" class="btn btn-success">Add New Subject</a>
    </div>
    <hr/>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Subject Name</th>
                <th>Total Marks</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subject in Model)
            {
                <tr>
                    <td>@subject.SubjectName</td>
                    <td>@subject.TotalMarks</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@subject.Id" class="btn btn-primary">Edit</a> |
                        <a asp-action="Details" asp-route-id="@subject.Id" class="btn btn-info">Details</a> |
                        <a asp-action="Delete" asp-route-id="@subject.Id" class="btn btn-danger">Delete</a>
                    </td>

                </tr>
            }

        </tbody>
    </table>
</div>
